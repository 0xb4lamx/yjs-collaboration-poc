{
  "name": "workspaces",
  "private": "true",
  "workspaces": [
    "packages/*",
    "app",
    "server"
  ],
  "scripts": {
    "y-ws": "cd server && bun y-ws",
    "dev:app": "cd app && bun dev",
    "dev:hono": "cd server && bun dev",
    "dev": "concurrently --names 'app,hono,y-ws' -c 'bgCyan.bold,bgYellow.bold,bgBlue.bold' 'bun dev:app' 'bun dev:hono' 'bun y-ws'"
  },
  "devDependencies": {},
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}