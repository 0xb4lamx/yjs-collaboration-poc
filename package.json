{
  "name": "workspaces",
  "private": "true",
  "workspaces": [
    "packages/*",
    "app",
    "server"
  ],
  "scripts": {
    "dev:app": "cd app && bun dev",
    "dev:server": "cd server && bun dev",
    "dev": "concurrently --names 'app,svr' -c 'bgCyan.bold,bgYellow.bold' 'bun dev:app' 'bun dev:server'",
    "build": "cd app && bun run build",
    "start": "cd server && bun run serve"
  },
  "devDependencies": {},
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}